---
rules:
  braces:
    min-spaces-inside: 1
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0
  document-start:
    ignore: ansible/roles/bulletproof-wordpress/vars/bpwp-dir.yml
  line-length:
    max: 120

extends: default

ignore: |
    dist/
    languages/
    mu-plugins/
    plugins/
    themes/
    vendor/
    wordpress/
