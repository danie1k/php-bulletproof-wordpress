{
  "name": "danie1k/bulletproof-wordpress",
  "homepage": "https://github.com/danie1k/php-bulletproof-wordpress",
  "description": "Wordpress deployment automation based on Ansible & Composer",
  "readme": "README.md",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Daniel Kuruc",
      "email": "daniel@kuruc.dev",
      "homepage": "https://daniel.kuruc.dev/",
      "role": "Developer"
    }
  ],
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "prefer-stable": true,
  "minimum-stability": "dev",
  "config": {
    "sort-packages": true,
    "vendor-dir": "vendor"
  },
  "extra": {
    "installer-paths": {
      "plugins/{$name}/": ["type:wordpress-plugin"],
      "themes/{$name}/": ["type:wordpress-theme"]
    }
  },
  "require": {
    "wpackagist-plugin/stops-core-theme-and-plugin-updates": "^9.0"
  }
}
